            android:contentDescription="@string/minusDay"
            android:padding="4dp"
            android:src="@drawable/jp_day_mon" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivDay4"
            android:layout_width="@dimen/dayTodayImgSize"
            android:layout_height="@dimen/dayTodayImgSize"
            android:layout_margin="4dp"
            android:contentDescription="@string/minusDay"
            android:padding="4dp"
            android:src="@drawable/jp_day_mon" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivDay5"
            android:layout_width="@dimen/dayTodayImgSize"
            android:layout_height="@dimen/dayTodayImgSize"
            android:layout_margin="4dp"
            android:contentDescription="@string/minusDay"
