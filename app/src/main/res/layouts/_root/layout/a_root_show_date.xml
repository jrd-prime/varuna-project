<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constLayDate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/show_date_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    tools:showIn="@layout/activity_dashboard">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Today: "
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/tvTodayDay"
        app:layout_constraintEnd_toStartOf="@+id/tvTodayDay"
        app:layout_constraintTop_toTopOf="@+id/tvTodayDay" />

    <TextView
        android:id="@+id/tvTodayDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mock"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>